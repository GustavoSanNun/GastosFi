<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <TextView
        android:id="@+id/tvmes"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:gravity="fill_horizontal|fill"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/btnmasmes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnmenosmes"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnmenosmes"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menosque"
        android:onClick="onClick"/>

    <ImageButton
        android:id="@+id/btnmasmes"
        android:layout_width="52dp"
        android:layout_height="49dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/masque"
        android:onClick="onClick"/>


    <TextView
        android:id="@+id/tvingreso"
        android:layout_width="87dp"
        android:layout_height="22dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="108dp"
        android:gravity="center"
        android:text="Ingresos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvgastos"
        android:layout_width="85dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Gastos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvingresos" />

    <TextView
        android:id="@+id/tvbalance"
        android:layout_width="78dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="Balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvgastos" />

    <TextView
        android:id="@+id/tvbalancecantidad"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvbalance" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvingresos"
        android:layout_width="107dp"
        android:layout_height="79dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvgastos"
        android:layout_width="109dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvgastos" />

    <TextView
        android:id="@+id/tvano"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>